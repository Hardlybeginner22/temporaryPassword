.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 60px 20px;
  box-sizing: border-box;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 15px;
  padding: 30px;
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4px solid #fff;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.userinfo-avatar:hover {
  transform: scale(1.05);
}

.userinfo-nickname {
  color: #4a4a4a;
  font-size: 18px;
  font-weight: 600;
  margin-top: 15px;
}

.usermotto {
  margin-top: 60px;
  font-size: 24px;
  color: #2c3e50;
  text-align: center;
  font-weight: 300;
}

.function-buttons {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.function-buttons button {
  margin-top: 20rpx;
  width: 80%;
  max-width: 300px;
  padding: 12px 0;
  border-radius: 30px;
  background-color: #3498db;
  color: white;
  font-size: 16px;
  font-weight: 500;
  border: none;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.function-buttons button:hover {
  background-color: #2980b9;
  transform: translateY(-2px);
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
}
