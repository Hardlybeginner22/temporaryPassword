.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.logo image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 80%;
  background-color: #07c160;
  color: white;
  border-radius: 10rpx;
  margin-top: 40rpx;
}
